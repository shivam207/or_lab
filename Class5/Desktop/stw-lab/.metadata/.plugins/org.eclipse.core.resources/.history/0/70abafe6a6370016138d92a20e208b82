package AkhilRaj;

public class BSTex extends BST{

	
	public static void main(String[] args) {
		
		BSTex bst = new BSTex();
		
		/*          50
		 * 		25	     75
		 * 	 15  35    65   85
		 * 	10			     95
		 * 5 				  105
		 * 						  125
		 * 		
		 */
		
		bst.insert(50);
		bst.insert(25);
		bst.insert(75);
		bst.insert(15);
		bst.insert(35);
		bst.insert(65);
		bst.insert(85);
		bst.insert(95);
		bst.insert(105);
		bst.insert(125);
		bst.insert(10);
		bst.insert(5);
		System.out.println(bst.noOfNodes(50, bst.root));

	}
	
	
	static int noOfNodes(int n, Node root)
	{
		int a = -1;
		
		if(root == null)
			return -1;
		
		if(root.data == n)
		{
			return size(root);
			
		}
		
		a = noOfNodes(n, root.left);
		if(a != -1)
			return a;
		a = noOfNodes(n, root.right);
		return a;
		
	}
	
	static int size(Node root)
	{
		int num = 0;
		
		if(root == null)
			return 0;
		
		num += size(root.left);
			
		num += size(root.right);
		System.out.println(root.data + " " + (num + 1));

		
		return num + 1;
		
	}
	

}
